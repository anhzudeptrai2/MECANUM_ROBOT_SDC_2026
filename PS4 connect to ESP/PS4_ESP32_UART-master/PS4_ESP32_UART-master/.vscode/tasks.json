{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PlatformIO: Build",
      "type": "shell",
      "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\platformio.exe",
      "args": ["run"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "PlatformIO: Upload",
      "type": "shell",
      "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\platformio.exe",
      "args": ["run", "-t", "upload"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "PlatformIO: Monitor (115200)",
      "type": "shell",
      "command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\platformio.exe",
      "args": ["device", "monitor", "-b", "115200"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "PlatformIO: Upload & Monitor",
      "dependsOrder": "sequence",
      "dependsOn": ["PlatformIO: Upload", "PlatformIO: Monitor (115200)"],
      "problemMatcher": []
    }
  ]
}
